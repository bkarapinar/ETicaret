@model AppUser
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Login</title>

    <!-- Custom fonts for this template-->
    <link href="~/OuterTools/bootstrap-admin-pages/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />

    <!-- Custom styles for this template-->
    <link href="~/OuterTools/bootstrap-admin-pages/css/sb-admin.css" rel="stylesheet" />

    <style>
        .field-validation-error {
            color: red;
        }
    </style>

</head>

<body class="bg-dark">

    <div class="container">


        @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "form-signin" }))
        {
            <div class="card card-login mx-auto mt-5">
                <center>
                    <header>@ViewBag.ZatenVar</header> 
                    <header class="alert alert-warning"> @ViewBag.KullaniciBulunamadi</header>
                </center>

                <div class="card-header">Login</div>
                <div class="card-body">
                    <form>
                        <div class="form-group">
                            <label for="userName">Kullanıcı Adı</label>
                            @Html.ValidationMessageFor(x =>x.UserName)
                            
                        <div class="form-label-group">

                            @* <input type="email" id="inputEmail" class="form-control" placeholder="Email address" required="required" autofocus="autofocus">*@

                            @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", placeholder = "Kullanıcı İsmi", required = "required", autofocus = "autofocus" })
                           
                            @* <label for="inputEmail">Email address</label>*@
                        </div>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword">Şifre</label>
                            @Html.ValidationMessageFor(x => x.Password)

                            <div class="form-label-group">

                                @Html.PasswordFor(x => x.Password, new { @class = "form-control", placeholder = "Sifre", required = "required", autofocus = "autofocus" })
                                @*<input type="password" id="inputPassword" class="form-control" placeholder="Password" required="required">*@
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <label>
                                    @*<input type="checkbox" value="remember-me">*@
                                    @Html.CheckBox("Hatirla") @*metot parametresindeki isim ile aynı olmalı.*@
                                    Remember Me!
                                </label>
                            </div>
                        </div>
                        @*<a class="btn btn-primary btn-block" href="index.html">Login</a>*@

                        <button class="btn btn-primary btn-block" href="@Url.Action("Index","Member")">Giriş</button>

                    </form>
                    <div class="text-center">
                        <a class="d-block small mt-3" href="@Url.Action("Register","Home")">Register an Account</a>
                        <a class="d-block small" href="forgot-password.html">Forgot Password?</a>
                    </div>
                </div>
            </div>

        }
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/OuterTools/bootstrap-admin-pages/vendor/jquery/jquery.min.js"></script>
    <script src="~/OuterTools/bootstrap-admin-pages/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/OuterTools/bootstrap-admin-pages/vendor/jquery-easing/jquery.easing.min.js"></script>

</body>

</html>
