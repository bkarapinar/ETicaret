@model Tuple<AppUser, AppUserDetail>

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Register</title>

    <!-- Custom fonts for this template-->
    <link href="~/OuterTools/bootstrap-admin-pages/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />

    <!-- Custom styles for this template-->
    <link href="~/OuterTools/bootstrap-admin-pages/css/sb-admin.css" rel="stylesheet" />
    
    <style>
        .field-validation-error {
            color: red;
        }
    </style>

</head>

<body class="bg-dark">

    <div class="container">
        <div class="card card-register mx-auto mt-5">
            <header class="alert alert-warning">@ViewBag.ZatenVar</header>

            <div class="card-header">Register an Account</div>
            <div class="card-body">
                @using (Html.BeginForm("Register", "Home", FormMethod.Post, new { @class = "form-signin" }))
                {
                    <h1 style="color:green">@TempData["HesapAktif"]</h1>

                    <div class="form-group">
                        <label for="userName">Kullanıcı Adı</label>
                        <div class="form-label-group">
                        

                            @Html.TextBoxFor(x => x.Item1.UserName, new { @class = "form-control", placeholder = "Kullanıcı ismi giriniz",required = "required", autofocus = "autofocus"  })
                            @Html.ValidationMessageFor(x => x.Item1.UserName)

                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-6">
                                <label for="firstName">İsminiz</label>
                                <div class="form-label-group">
                                    @Html.TextBoxFor(x => x.Item2.FirstName, new { @class = "form-control", placeholder = "İsminiz", required = "required", autofocus = "autofocus" })
                                    @Html.ValidationMessageFor(x => x.Item2.FirstName)


                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="lastName">Soyisminiz</label>
                                <div class="form-label-group">
                                    @Html.TextBoxFor(x => x.Item2.LastName, new { @class = "form-control", placeholder = "Soyisminiz", required = "required" })
                                    @Html.ValidationMessageFor(x => x.Item2.LastName)

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputEmail">Email Adres</label>
                        <div class="form-label-group">
                            @Html.TextBoxFor(x => x.Item1.Email, new { @class = "form-control", placeholder = "Email Adress", required = "required" })
                            @Html.ValidationMessageFor(x => x.Item1.Email)

                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-6">
                                <label for="inputPassword">Şifre</label>
                                <div class="form-label-group">
                                    @Html.TextBoxFor(x => x.Item1.Password, new { @class = "form-control", type = "password", placeholder = "Şifre", required = "required" })
                                    @Html.ValidationMessageFor(x => x.Item1.Password)

                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="confirmPassword">Şifre Tekrar</label>
                                <div class="form-label-group">
                                    @Html.TextBoxFor(x => x.Item1.ConfirmPassword, new { @class = "form-control", type = "password", placeholder = "Şifre tekrar",required = "required"  })
                                    @Html.ValidationMessageFor(x => x.Item1.ConfirmPassword)

                                </div>
                            </div>
                        </div>
                    </div>
                   
                    <button class="btn btn-primary btn-block" href="@Url.Action("Login","Home")">Giriş</button>

                }

            <div class="text-center">
                <a class="d-block small mt-3" href="@Url.Action("Login","Home")">Zaten Üye Misin?</a>

                <a class="d-block small" href="forgot-password.html">Forgot Password?</a>
            </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/OuterTools/bootstrap-admin-pages/vendor/jquery/jquery.min.js"></script>
    <script src="~/OuterTools/bootstrap-admin-pages/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/OuterTools/bootstrap-admin-pages/vendor/jquery-easing/jquery.easing.min.js"></script>

</body>

</html>
