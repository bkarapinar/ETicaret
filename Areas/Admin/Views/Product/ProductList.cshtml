@model List<Product>

@{
    ViewBag.Title = "ProductList";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<body>

    <div class="container" style="overflow-x:scroll">
        <div class=" badge-info">
            <h5 class="alert-heading" style="margin-left:350px">Ürün Yönetim Sayfası</h5>

        </div>
        <div>@Html.ActionLink("Ürün Ekle", "AddProduct", "Product", new { Area = "Admin" }, new { @class = "btn btn-outline-warning" }) </div>


        <br />
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Eser ID</th>
                    <th>Eser Adı</th>
                    <th>Kategorisi</th>
                    <th>Eser Açıklamaları</th>
                    <th>Stok</th>
                    <th>Eser Fiyatı</th>
                    <th>Eser Resmi</th>

                    <th>Güncelle</th>
                    <th>Sil</th>

                </tr>
            </thead>
            <tbody>
                @foreach (Product item in Model)
                {
                    <tr>
                        <td>@item.ID</td>
                        <td>@item.ProductName</td>

                        @if (item.Category == null)
                        {
                            <td style="color:crimson">Kategorisi Girilmemiş</td>
                        }
                        else
                        {
                            <td>@item.Category.CategoryName</td>
                        }
                        <td>@item.Description</td>
                        <td>@item.UnitInStock</td>
                        <td>@item.UnitPrice</td>
                        <td>
                            <a href="@item.ImagePath">

                                <img src="@item.ImagePath" class="img-responsive" style="width:100px;height:100px; margin:auto;" />
                            </a>

                        </td>


                        <td>@Html.ActionLink("Güncelle", "UpdateProduct", new { id = item.ID }, new { @class = "btn btn-outline-info" })</td>
                        <td>@Html.ActionLink("Sil", "DeleteProduct", new { id = item.ID }, new { @class = "btn btn-outline-danger" })</td>

                    </tr>
                }


            </tbody>
        </table>
    </div>

</body>
